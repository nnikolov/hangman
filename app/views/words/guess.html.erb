<div class="big">
<div class="display">
<% if @score < 7 %>
<%= image_tag "hangman#{@score}.png", :id => "gallows_pole" %>
<% else %>
<%= image_tag "hangman6.png", :id => "gallows_pole" %>
<% end %>
<% @word.word.downcase.each_char do |char| %>
<%= @chars.include?(char) ? char : '_' %>
<% end %>
</div>

<% alphabet = @alphabet == "latin" ? Array('A'..'Z') : Array('А'..'Ъ') + %w(ь Ю Я) %>
<% alphabet.each do |l| %>
<%= link_to l, my_guess_path(params[:id], l), :class => "keyboard" %>&nbsp;
<% end %>
</div>

<div class="status_bar">
Hints: <%= session[:hints] %>,
Score: 
<% if @score > 0 %>
-<%= @score %>
<% else %>
&nbsp<%= @score -%>
<% end %>,
Letters: <%= session[:chars].uniq %>
<br /><br />
<%= link_to 'Hint', hint_path %>
<br /><%= link_to 'Play again', play_path %>
<br /><%= link_to 'Back', words_path %>
</div>
