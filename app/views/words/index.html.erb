<%= link_to "Regular play", regular_play_path %>
<%= link_to "Easy play", easy_play_path %>

<h1>Listing words</h1>

<%= link_to 'New Word', new_word_path %>

<table>
  <tr>
    <th>Word</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.word %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

